<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="il.co.All4Students.homemovies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16"
        tools:ignore="OldTargetApi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.HomeProjectApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="il.co.All4Students.homemovies.ScreenMain"
            android:configChanges="locale"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="il.co.All4Students.homemovies.ScreenEdit"
            android:configChanges="locale"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="il.co.All4Students.homemovies.ScreenWeb"
            android:configChanges="locale"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="il.co.All4Students.homemovies.ScreenPreferences"
            android:configChanges="locale" >
        </activity>
        <activity
            android:name="il.co.All4Students.homemovies.ScreenGrid"
            android:configChanges="locale" >
        </activity>
        <activity
            android:name="il.co.All4Students.homemovies.ScreenGridDetail"
            android:configChanges="locale" >
        </activity>
    </application>

</manifest>