<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/Size10dp"
    android:orientation="vertical" >

    <EditText
        android:id="@id/customDialogSearchEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Size10dp"
        android:layout_marginRight="@dimen/Size10dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="@dimen/Size20dp" >

        <requestFocus />
    </EditText>

    <TableRow
        android:id="@id/customDialogSearchTableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@id/customDialogSearchButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnLableCancel" />

        <Button
            android:id="@id/customDialogSearchButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnLableSearch" />
    </TableRow>

</LinearLayout>